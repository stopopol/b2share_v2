function b2share_form_node_form_alter(&$form, &$form_state, $form_id) {
  $form['actions']['submit']['#submit'][] = 'b2share_save_to_db';
}


function b2share_save_to_db($form, &$form_state) {

  $save_doi_value = variable_get('save_dois');
  if ($save_doi_value == 1){
    $values = array(
      'doi' => $form_state['values']['b2share_fieldset']['doi'],
      'pid' => $form_state['values']['b2share_fieldset']['pid']
    );
  }

  else {
    $values = array(
      'pid' => $form_state['values']['b2share_fieldset']['pid']
    );
  }

  if ( (empty($values['doi'] == false) || (empty($values['pid']) == false)) ) {

	$form_state_values = $form_state['values'];
	$form_id_state = $form_state_values['b2share_fieldset'];

	$db_name_b2share = $form_id_state['database_field_name'];
	$b2share_table_name = 'field_data_'.$db_name_b2share;
	$b2share_column_doi = $db_name_b2share.'_doi';
	$b2share_column_pid = $db_name_b2share.'_pid';

	/*
	drupal_set_message(t('the name of the field is '.$db_name_b2share));
	drupal_set_message(t('the table_name is '.$b2share_table_name));
	drupal_set_message(t('the doi_column is '.$b2share_column_doi));
	drupal_set_message(t('the pid_column is '.$b2share_column_pid));
	*/

    $insert = db_insert($b2share_table_name)
      -> fields(array(
        // and columns
       $b2share_column_doi => $values['doi'],
       $b2share_column_pid => $values['pid'],
       'entity_id' => $form_state['node']->nid,
       'entity_type' => 'node',
       'bundle' => $form_state['node']->type,
       'delta' => 0,
       'language' => 'und',
     ))
     ->execute();

  }
}


