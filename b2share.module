/**
 * Functions that are being called - communication with the B2Share API happens here
 */

function b2share_ajax_submit(&$form, &$form_state) {

  // Fetch token from settings
  $temp_token = variable_get('b2share_token');

  if ($temp_token == 'Example LKR35GP7TG') {
    drupal_set_message(t('You need to set a token.'), 'error');
    return;
  }

  // check for curl
  $curl_version = function_exists('curl_version');

  if ($curl_version == false ) {
    drupal_set_message(t('Curl is NOT installed.'), 'error');
    return $form['b2share_fieldset']['pid'];
  }

  // Fetch metadata information and file

  // Load file from select form
  $file = file_load($form_state['values']['b2share_fieldset']['file_select']);

  if ((empty($file)) == true) {
    form_set_error('[b2share_fieldset][file_select]', t('Please select a file'));
    return $form['b2share_fieldset']['pid'];
  }

  // get file information
  $uri = $file->uri;
  $file_realpath =  drupal_realpath($uri);
  $file_url =       file_create_url($uri);
  $base_file_name = drupal_basename($uri);
  $open_access = $form_state['values']['b2share_fieldset']['open_access'];
  $md_description = $form_state['values']['b2share_fieldset']['description'];
  $md_title = $form_state['values']['b2share_fieldset']['title'];
  $md_creator = $form_state['values']['b2share_fieldset']['creator'];


  if ($open_access == 1){
    $open_access = true;
  }
  else {
    $open_access = false;
  }

  //drupal_set_message(t('The open access is '.$open_access));

  //timestamp
  $timestamp =  date("Y-m-d H:i:s");
  //$md_description = 'My first dataset ingested using the API and curl. Timestamp: '.$timestamp;

  $metadata_array = array(
     'domain' => variable_get('b2share_domain'),
     'title' => $md_title,
     'creator' => $md_creator,
     'description' => $md_description,
     'open_access' => $open_access,
   );
   $metadata_json = json_encode($metadata_array);
   drupal_set_message(t('The metadata_json is '.$metadata_json));

  // Build the query.
  // Create a new deposition
  $base_url = variable_get('b2share_url');
  $url = $base_url.'api/records/?access_token='.$temp_token;
  drupal_set_message(t('The url is '.$url));
  drupal_set_message(t('The open_access is '.$open_access));

  if(!$url || !is_string($url) || ! preg_match('/^http(s)?:\/\/[a-z0-9-]+(.[a-z0-9-]+)*(:[0-9]+)?(\/.*)?$/i', $url)){
    drupal_set_message(t('Bad url'));
  }

  $params = array(
    'title' => 'testRest2',
    // eudat community
    'community' => 'e9b9792e-79fb-4b07-b6b4-b9c2bd06d095',
    'open_access' => $open_access,
  );
  $params_json = json_encode($params);
  drupal_set_message(t('The params_json is '.$params_json));

  // curl
  $curl_draft = curl_init();
  curl_setopt($curl_draft, CURLOPT_URL, $url);
    // MASSIVE SECURITY ISSUE
    curl_setopt($curl_draft, CURLOPT_SSL_VERIFYPEER, false);
    curl_setopt($curl_draft, CURLOPT_SSL_VERIFYHOST, false);
    //
  curl_setopt($curl_draft, CURLOPT_POST, 1);
  curl_setopt($curl_draft, CURLOPT_POSTFIELDS, $params_json);
  curl_setopt($curl_draft, CURLOPT_HTTPHEADER, array(
    'Accept:application/json',
    'Content-Type:application/json',
  ));
  curl_setopt($curl_draft, CURLINFO_HEADER_OUT, true);

  // output the response
  curl_setopt($curl_draft, CURLOPT_RETURNTRANSFER, true);

  $ausgabe = curl_exec($curl_draft);
  $http_status = curl_getinfo($curl_draft, CURLINFO_HTTP_CODE);
  $headerSent = curl_getinfo($curl_draft, CURLINFO_HEADER_OUT );

  if ($ausgabe === false) $ausgabe = curl_error($curl_draft);

  curl_close($curl_draft);

  // Return status message
  drupal_set_message(t('The curl header sent is '.$headerSent));
  drupal_set_message(t('The status code is '.$http_status));
  drupal_set_message(t('The curl status message is '.$ausgabe));

  // Save response as php variable
  $php_variable = drupal_json_decode($ausgabe);
  $record_id = $php_variable['id'];
  $return_links = $php_variable['links'];
  $draft_id = $return_links['files'];
  $record_id = $return_links['self'];

  // PID of deposition
  drupal_set_message(t('The draft_id is '.$draft_id));
  $deposit_url = $draft_id;
  drupal_set_message(t('The deposit_url is '.$deposit_url));

  $upload_url = $draft_id.'/'.$base_file_name.'?access_token='.$temp_token;
  drupal_set_message(t('The upload_url is '.$upload_url));
  // deposit file
  $request = curl_init($upload_url);

  $cfile = new CURLFile($file_realpath,'application/octet-stream', $base_file_name);
  $data = array ('test_file' => $cfile);

  curl_setopt($request, CURLOPT_CUSTOMREQUEST, "PUT");
  curl_setopt($request, CURLOPT_POSTFIELDS, $data);
  curl_setopt($request, CURLOPT_HTTPHEADER, array(
    'Accept:application/json',
    'Content-Type:application/json',
  ));

  // MASSIVE SECURITY ISSUE
  curl_setopt($request, CURLOPT_SSL_VERIFYPEER, false);
  curl_setopt($request, CURLOPT_SSL_VERIFYHOST, false);
  //

  curl_setopt($request, CURLINFO_HEADER_OUT, true);

  curl_setopt($request, CURLOPT_RETURNTRANSFER, true);
  $ausgabe = curl_exec($request);
  $http_status = curl_getinfo($request, CURLINFO_HTTP_CODE);
  $headerSent = curl_getinfo($request, CURLINFO_HEADER_OUT);

  curl_close($request);

  // Return status message
  drupal_set_message(t('The curl header sent is '.$headerSent));
  drupal_set_message(t('The status code is '.$http_status));
  drupal_set_message(t('The curl status message is '.$ausgabe));

  $patch_content='[{"op": "add", "path":"/publication_state", "value": "published"}]';

  drupal_set_message(t('The patch content is '.$patch_content));
  drupal_set_message(t('The draft_id is '.$record_id));

  $publish_url = $record_id.'?access_token='.$temp_token;
  drupal_set_message(t('The publish_url is '.$publish_url));

  // Patch Call in order to publish a draft
  $curl_publish = curl_init($publish_url);
  curl_setopt($curl_publish, CURLOPT_RETURNTRANSFER, true);
  curl_setopt($curl_publish, CURLOPT_CUSTOMREQUEST, 'PATCH');
  curl_setopt($curl_publish, CURLOPT_POSTFIELDS, $patch_content);
  curl_setopt($curl_publish, CURLOPT_HTTPHEADER, array(
    'Accept:application/json',
    'Content-Type:application/json-patch+json',
  ));
  // MASSIVE SECURITY ISSUE
  curl_setopt($curl_publish, CURLOPT_SSL_VERIFYPEER, false);
  curl_setopt($curl_publish, CURLOPT_SSL_VERIFYHOST, false);
  //
  curl_setopt($curl_publish, CURLINFO_HEADER_OUT, true);
  $ausgabe = curl_exec($curl_publish);

  $http_status = curl_getinfo($curl_publish, CURLINFO_HTTP_CODE);
  $headerSent = curl_getinfo($curl_publish, CURLINFO_HEADER_OUT);

  if ($ausgabe === false) $ausgabe = curl_error($curl_publish);

  curl_close($curl_publish);

  // Return status message
  drupal_set_message(t('The curl header sent is '.$headerSent));
  drupal_set_message(t('The status code is '.$http_status));
  drupal_set_message(t('The curl status message is '.$ausgabe));

  if ($http_status == 200) {
    drupal_set_message(t('File was successfully deposited :)'), 'status');
  }
  else {
   drupal_set_message(t('Oh no. Something went wrong :('), 'error');
   return $form['b2share_fieldset']['url'];
  }

  $form['b2share_fieldset']['url']['#value'] = $deposit_url;
  return $form['b2share_fieldset']['url'];
}

